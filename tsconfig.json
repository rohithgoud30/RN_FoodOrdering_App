{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/assets/*": ["./assets/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/providers/*": ["./src/providers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
